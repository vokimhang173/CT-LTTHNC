<form method="POST" class="needs-validation" novalidate>
    <div class="form-group">
        <input type="hidden" name="idP" value="<%- danhmuc._id %>">
    </div>
    <div class="form-group">
        <label for="tendm">Tên sản phẩm</label>
        <input type="text" class="form-control" name="tendm" value="<%- danhmuc.Title %>" id="tendm"
            placeholder="Tên sản phẩm" required>
        <div class="invalid-feedback" style="width: 100%;">
            Bạn chưa nhập tên sản phẩm!!!
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-lg btn-primary" value="Edit" />
    </div>
</form>