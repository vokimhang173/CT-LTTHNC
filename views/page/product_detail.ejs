<div class="container">
    <div class="album py-5 bg-light">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" id="sp" width="100" height="350" src="../images/<%- sanpham.Image %>" />
                </div>
            </div>
            <div class="col-md-6 ">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="tensp">
                            <p>Tên Sản Phẩm: <%- sanpham.Name %>
                            </p>
                        </h5>
                        <h5>
                            <p>Giá: <%- sanpham.Cost %>
                            </p>
                        </h5>
                        <form class="horizontal-form">
                            <button type="button" class="btn btn-info ml-2" data-toggle="modal"
                                data-target="#myModal">Xem Review</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

</div>

</div>

<div class="modal " style="margin-top:100px;" id="myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông tin sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <pre style="white-space: pre-wrap;"><%- sanpham.Mota %></pre>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>